<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <ImageView android:id="@+id/app_item_launch_icon"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginEnd="@dimen/fab_margin"
                   android:contentDescription="@string/application_launch_icon"/>
        <TextView android:id="@+id/app_item_package_name"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"/>
        <ImageView android:id="@+id/app_item_isActive"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:contentDescription="@string/indicator_reflecting_if_app_is_active_or_not"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
